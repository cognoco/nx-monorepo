{
  "permissions": {
    "allow": [
      "Bash",
      "WebSearch",
      "mcp__plugin_default_Sequential_Thinking_MCP",
      "mcp__plugin_dev-core_Context7_MCP",
      "mcp__plugin_dev-core_Vibe-Check_MCP",
      "mcp__plugin_dev-additional_NX_MCP",
      "mcp__plugin_dev-additional_Exa_MCP"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node /home/runner/work/nx-monorepo/nx-monorepo/.claude/post-tool-use.mjs"
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node /home/runner/work/nx-monorepo/nx-monorepo/.claude/post-tool-use.mjs"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "powershell -c \"(New-Object Media.SoundPlayer 'C:\\Windows\\Media\\Windows Proximity Notification.wav').PlaySync();\"",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
