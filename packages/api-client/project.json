{
  "name": "@nx-monorepo/api-client",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/api-client/src",
  "projectType": "library",
  "targets": {
    "generate-types": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "tsx apps/server/scripts/write-openapi.ts",
          "pnpm exec openapi-typescript dist/apps/server/openapi.json -o packages/api-client/src/gen/openapi.d.ts --export-type"
        ],
        "cwd": "{workspaceRoot}",
        "parallel": false
      },
      "inputs": [
        "{workspaceRoot}/dist/apps/server/apps/server/src/**/*.js",
        "{workspaceRoot}/apps/server/scripts/write-openapi.ts"
      ],
      "outputs": [
        "{workspaceRoot}/dist/apps/server/openapi.json",
        "{projectRoot}/src/gen/openapi.d.ts"
      ],
      "dependsOn": ["@nx-monorepo/server:build"],
      "cache": false
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "packages/api-client",
        "commands": [
          "tsc --build tsconfig.lib.json",
          "tsx scripts/copy-gen.ts"
        ],
        "parallel": false
      },
      "cache": true,
      "inputs": ["production", "^production"],
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["generate-types", "^build"],
      "syncGenerators": ["@nx/js:typescript-sync"],
      "metadata": {
        "technologies": ["typescript"],
        "description": "Builds the project with `tsc`.",
        "help": {
          "command": "pnpm exec tsc --build --help",
          "example": {
            "args": ["--force"]
          }
        }
      }
    },
    "format:check": {}
  },
  "tags": ["npm:private"]
}
