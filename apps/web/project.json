{
  "name": "@nx-monorepo/web",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/web/src",
  "projectType": "application",
  "targets": {
    "build": {
      "cache": false,
      "metadata": {
        "description": "Caching disabled due to Next.js standalone symlink conflicts with Nx remote cache (EEXIST error)"
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -f apps/web/Dockerfile -t nx-monorepo-web .",
        "cwd": "{workspaceRoot}"
      },
      "dependsOn": ["build"]
    },
    "test": {
      "options": {
        "env": {
          "NX_DAEMON": "false",
          "TS_NODE_COMPILER_OPTIONS": "{\"moduleResolution\":\"node10\",\"module\":\"commonjs\",\"customConditions\":null}"
        }
      }
    },
    "typecheck": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "cwd": "apps/web",
        "command": "tsc --noEmit"
      },
      "cache": true,
      "inputs": [
        "default",
        "^production",
        {
          "externalDependencies": ["typescript"]
        }
      ],
      "metadata": {
        "technologies": ["typescript"],
        "description": "Runs type-checking for the project."
      }
    },
    "format:check": {}
  }
}
